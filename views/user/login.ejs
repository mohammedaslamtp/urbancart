<section class="vh-100" style="background-color: #508bfc;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-12 col-md-8 col-lg-6 col-xl-5">
                <div class="card shadow-2-strong" style="border-radius: 1rem;">
                    <form class="card-body p-5 text-center" method="post" action="/userLogIn">

                        <h2 class="text-warning pb-4">URBANCART</h2>
                        <h3 class="mb-4 text-warning">Sign in</h3>

                        <% if (logErr) { %>
                            <p class="text-danger">
                                <%= logErr %>
                            </p>
                            <%} else { %>
                                <% } %>
                                    <div class="form-outline mb-4">
                                        <input name="email" type="email" id="typeEmailX-2"
                                            class="form-control form-control-lg"
                                             />
                                        <label class="form-label pt-3" for="typeEmailX-2">Email</label>
                                    </div>
                                    <div class="form-outline mb-4">
                                        <input name="nPassword" type="password"
                                            id="typePasswordX-2" class="form-control form-control-lg" />
                                        <label class="form-label pt-3" for="typePasswordX-2">Password</label>
                                    </div>
                                    <button class="btn btn-primary btn-lg btn-block" type="submit">Login</button>
                                    <hr class="my-5">
                                    <p><a href="/signup">Create account</a></p>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>