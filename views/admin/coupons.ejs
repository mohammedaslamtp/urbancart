<!-- data table cdn adn style -->
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.13.1/css/jquery.dataTables.css">
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.13.1/js/jquery.dataTables.js"></script>

<div class="container-xxl position-relative bg-white d-flex p-0">
    <!-- Table start -->
    <section class="content">
        <div class="container-fluid pt-4 px-4">
            <div class="row g-4">
                <div class="col-sm-12 col-xl-12">
                    <div class="bg-light rounded h-100 p-4">
                        <div class="d-flex justify-content-between pb-3">
                            <h6 class="mb-4">Coupons List</h6>

                            <button type="button" class="btn btn-primary" data-toggle="modal"
                                data-target="#addNewCoupon" data-whatever="@addCoupon">Add Coupon</button>
                            <!-- Modal Start -->
                            <div class="modal fade" id="addNewCoupon" tabindex="-1" role="dialog"
                                aria-labelledby="exampleModalLabel" aria-hidden="true">
                                <div class="modal-dialog" role="document">
                                    <div class="modal-content">
                                        <div class="modal-header">
                                            <h5 class="modal-title" id="exampleModalLabel">Add a coupon</h5>
                                            <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                                                <span aria-hidden="true">&times;</span>
                                            </button>
                                        </div>
                                        <div class="modal-body">
                                            <form action="/admin/addCoupon" method="post">
                                                <div class="form-group">
                                                    <label for="recipient-name" class="col-form-label">Name</label>
                                                    <input type="text" name="name" class="form-control"
                                                        id="recipient-name">
                                                </div>
                                                <div class="form-group">
                                                    <label for="message-text" class="col-form-label">Discription</label>
                                                    <textarea class="form-control" name="discription"
                                                        id="message-text"></textarea>
                                                </div>
                                                <div class="form-group">
                                                    <label for="discription" class="col-form-label">Discount</label>
                                                    <input type="number" name="discount" class="form-control" id="">
                                                </div>
                                                <div class="form-group">
                                                    <label for="minCartAmount" class="col-form-label">Min cart
                                                        amt</label>
                                                    <input type="number" name="minCartAmount" class="form-control">
                                                </div>
                                                <div class="form-group">
                                                    <label for="datetime" class="col-form-label">Start
                                                        Date</label>
                                                    <input type="date" name="startDate" class="form-control" id="">
                                                </div>
                                                <div class="form-group">
                                                    <label for="expiry" class="col-form-label">Expiry</label>
                                                    <input type="date" name="expiry" class="form-control" id="">
                                                </div>
                                                <button type="submit" class="btn btn-primary ms-auto">Submit</button>
                                            </form>
                                        </div>
                                        <div class="modal-footer">
                                            <button type="button" class="btn btn-secondary"
                                                data-dismiss="modal">Close</button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <!-- Modal end -->
                        </div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="bg-light rounded h-100 p-4">
                        <h6 class="mb-4">Coupons List</h6>
                        <div class="table-responsive">
                            <table class="table text-center" id="coupons_table">
                                <thead>
                                    <tr>
                                        <th scope="col" class="text-center">Number</th>
                                        <th scope="col" class="text-center">Name</th>
                                        <th scope="col" class="text-center">Discription</th>
                                        <th scope="col" class="text-center">Discount</th>
                                        <th scope="col" class="text-center">Min Cart amt</th>
                                        <th scope="col" class="text-center">Started At</th>
                                        <th scope="col" class="text-center">Expiry</th>
                                        <th scope="col" class="text-center">Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <%showCoupons.forEach((el,index)=>{%>

                                        <tr>
                                            <th scope="row">
                                                <%= index + 1 %>
                                            </th>
                                            <td>
                                                <%= el.name %>
                                            </td>
                                            <td>
                                                <%= el.discription %>
                                            </td>
                                            <td>
                                                <%= el.discount %>
                                            </td>
                                            <td>
                                                <%= el.minCartAmount %>
                                            </td>
                                            <td title="<%= el.startDate %>">
                                                <%= el.startDate.getFullYear()%>-<% if(el.startDate.getMonth()<10){ %>0
                                                        <% } %>
                                                            <%= el.startDate.getMonth()+1%>-<%
                                                                    if(el.startDate.getDate()<10){ %>0<% } %>
                                                                        <%=el.startDate.getDate()%>

                                            <td title="<%= el.expiry %>">
                                                <%= el.expiry.getFullYear()%>-<% if(el.expiry.getMonth()<10){ %>0<% } %>
                                                            <%= el.expiry.getMonth()+1%>-<% if(el.expiry.getDate()<10){
                                                                    %>0<% } %>
                                                                        <%=el.expiry.getDate()%>
                                            </td>

                                            <td>
                                                <a href="/admin/editCoupon/<%= el._id %>" data-toggle="modal"
                                                    data-target="#editCoupon<%= el._id %>"
                                                    data-whatever="@editCoupon"><i class="bi bi-pencil-square"></i></a>

                                                <!-- Modal Start -->
                                                <div class="modal fade" id="editCoupon<%= el._id %>" tabindex="-1"
                                                    role="dialog" aria-labelledby="exampleModalLabel"
                                                    aria-hidden="true">
                                                    <div class="modal-dialog" role="document">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h5 class="modal-title" id="exampleModalLabel">Edit
                                                                    coupon
                                                                </h5>
                                                                <button type="button" class="close" data-dismiss="modal"
                                                                    aria-label="Close">
                                                                    <span aria-hidden="true">&times;</span>
                                                                </button>
                                                            </div>
                                                            <div class="modal-body text-start">
                                                                <form action="/admin/editCoupon/<%= el._id %>"
                                                                    method="post">
                                                                    <div class="form-group">
                                                                        <label for="recipient-name"
                                                                            class="col-form-label">Name</label>
                                                                        <input type="text" name="name"
                                                                            class="form-control" id="recipient-name"
                                                                            value="<%= el.name %> ">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="message-text"
                                                                            class="col-form-label">Discription</label>
                                                                        <input type="text" class="form-control"
                                                                            name="discription" id="message-text"
                                                                            value="<%= el.discription %>"></input>
                                                                    </div>

                                                                    <div class="form-group">
                                                                        <label for="discription"
                                                                            class="col-form-label">Discount</label>
                                                                        <input type="text" name="discount"
                                                                            class="form-control"
                                                                            value="<%= el.discount %>">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="discription"
                                                                            class="col-form-label">Min cart amt</label>
                                                                        <input type="number" name="minCartAmount"
                                                                            class="form-control"
                                                                            value="<%= el.minCartAmount %>">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="date" class="col-form-label">Start
                                                                            Date</label>
                                                                        <input type="date" name="startDate"
                                                                            class="form-control"
                                                                            value="<%= el.startDate.getFullYear()%>-<% if(el.startDate.getMonth()<10){ %>0<% } %><%= el.startDate.getMonth()+1%>-<% if(el.startDate.getDate()<10){ %>0<% } %><%=el.startDate.getDate()%>">
                                                                    </div>
                                                                    <div class="form-group">
                                                                        <label for="expiry"
                                                                            class="col-form-label">Expiry</label>
                                                                        <input type="date" name="expiry"
                                                                            class="form-control"
                                                                            value="<%= el.expiry.getFullYear()%>-<% if(el.expiry.getMonth()<10){ %>0<% } %><%= el.expiry.getMonth()+1%>-<% if(el.expiry.getDate()<10){ %>0<% } %><%=el.expiry.getDate()%>">
                                                                    </div>
                                                                    <button type="submit"
                                                                        class="btn btn-primary ms-auto">Submit</button>
                                                                </form>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary"
                                                                    data-dismiss="modal">Close</button>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>

                                                <% if(el.status==true){ %>
                                                    <a href="/admin/disableCoupon/<%= el._id %>"
                                                        onclick="return confirm('Do you want to desable the coupon?')"><i
                                                            class="bi bi-lock-fill"></i></a>
                                                    <% } else { %>
                                                        <a href="/admin/enableCoupon/<%= el._id %>"
                                                            onclick="return confirm('Do you want to enable the coupon?')"><i
                                                                class="bi bi-unlock-fill"></i></a>
                                                        <% } %>
                                            </td>
                                        </tr>
                                        <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>
</div>

<script>
    $(document).ready(function () {
            $('#coupons_table').DataTable();
        });
</script>