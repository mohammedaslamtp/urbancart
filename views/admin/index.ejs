<script>

    <% let months = yearlySales.map((val) => { return val._id.month }) %>
    <% let yearlyCount = yearlySales.map((val) => { return val.totalSales }) %>

    // Worldwide Sales Chart
    let ctx1 = $("#worldwide-sales").get(0).getContext("2d");
    var myChart1 = new Chart(ctx1, {
        type: "bar",
        data: {
            labels: ["January", "February", "March", "April", "May", "June", "July", "Auguest", "Septemper", "October", "November", "December"],
            datasets: [
                {
                    label: "UK",
                    data: [<%=yearlyCount %> ],
                    backgroundColor: "rgba(0, 156, 255, .5)"
                }
            ]
        },
        options: {
            responsive: true
        }
    });

<% let dates = salesData.map((val) => { return val._id.slice(-2) }) %>
<% let salesCount = salesData.map((val) => { return val.count }) %>

        // Salse & Revenue Chart
        let  ctx2 = $("#salse-revenue").get(0).getContext("2d");
    var myChart2 = new Chart(ctx2, {
        type: "line",
        data: {
            labels: [<%=dates %>],
            datasets: [
                {
                    label: "Order",
                    data: [<%=salesCount %>],
                    backgroundColor: "rgba(0, 156, 255, .3)",
                    fill: true
                }
            ]
        },
        options: {
            responsive: true
        }
    });
</script>